//Ejercicio 1
<html>
<head>
    <meta charset="UTF-8">
    <title>Ejercicio 1</title>
    <script>
        function cambiarTexto() {
            // Obtén el elemento del párrafo por su id
            var parrafo = document.getElementById("parrafo");
            
            // Cambia el texto del párrafo
            parrafo.innerHTML = "¡Texto cambiado con JavaScript!";
        }
    </script>
</head>
<body>
    <p id="parrafo">Este es un párrafo de ejemplo.</p>
    <br>
    <!-- Llama a la función cambiarTexto() cuando se hace clic en el botón -->
    <button onclick="cambiarTexto()">Haz clic aquí</button>
</body>
</html>


